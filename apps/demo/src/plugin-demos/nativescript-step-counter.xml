<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
  <Page.actionBar>
    <ActionBar title="nativescript-step-counter" icon="" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
        <Button text="Is Available" tap="{{ isAvailable }}" class="btn btn-primary"/>
        <Button text="Is Authorized" tap="{{ isAuthorized }}" class="btn btn-primary"/>
        <Button text="Request Authorization" tap="{{ requestAuthorization }}" class="btn btn-primary"/>
        <Button text="Query" tap="{{ query }}" class="btn btn-primary"/>
        <Button text="{{ activeUpdates ? 'Stop Updates' : 'Start Updates' }}" tap="{{ startOrStopUpdates }}" class="btn btn-primary"/>
        <Button text="{{ activeEventUpdates ? 'Stop Event Updates' : 'Start Event Updates' }}" tap="{{ startOrStopEventUpdates }}" class="btn btn-primary"/>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>